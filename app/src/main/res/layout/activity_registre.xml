<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".activity_registre">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/shape"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:id="@+id/shapereg"/>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textLog"
    android:text="Register Now "
    android:layout_below="@id/shapereg"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/poppinsbold"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt"
    android:text=" Let's Manage Home From Any Place "
    android:layout_below="@id/textLog"
    android:layout_centerHorizontal="true"
    android:fontFamily="sans-serif"
    android:textSize="12sp"
    android:layout_marginTop="15dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_below="@id/txt"
    android:id="@+id/editsreg"
    android:padding="30dp"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/input_bg"
        android:textSize="14dp"
        android:textColorHint="@color/black"
        android:fontFamily="@font/poppinsregular"
        android:paddingLeft="10dp"
        android:id="@+id/NameRegEdit"
        android:hint="Enter your Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/input_bg"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:textColorHint="@color/black"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/EmailRegEdit"
        android:hint="Enter your Email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/input_bg"
        android:textColorHint="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/PassRegEdit"
        android:hint="Enter your Password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/input_bg"
        android:fontFamily="@font/poppinsregular"
        android:textColorHint="@color/black"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/PassConfRegEdit"
        android:hint="Confirm your Password" />

</LinearLayout>

<Button
    android:layout_width="285dp"
    android:layout_height="49dp"
    android:id="@+id/btnRegister"
    android:layout_below="@+id/editsreg"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:textStyle="bold"
    android:text="Register"
    android:background="@drawable/button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegister"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Already have an account?"
            android:layout_below="@id/btnRegister"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/logRegBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:text="  Login "
            android:textColor="@color/primaryColor"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>